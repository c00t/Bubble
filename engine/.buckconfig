[repositories]
root = .
# use vendored prelude for now
prelude = prelude/prelude
toolchains = toolchains
none = none

[repository_aliases]
config = prelude
fbcode = root
fbsource = none
buck = none

[parser]
target_platform_detector_spec = target:root//...->toolchains//:default

[rust]
default_edition = 2021
remap_src_paths = yes
rustc_check_flags = --cap-lints=warn

[buck2]
dice = modern
